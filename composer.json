{
    "name": "attla/resource-watcher",
    "description": "A simple resource watcher using Symfony Finder",
    "keywords": [
        "resources",
        "watcher",
        "finder",
        "symfony"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Lucas Nicolau",
            "email": "lucas@octha.com"
        }
    ],
    "require": {
        "php": ">=5.6",
        "symfony/finder": "^2.7|^3.0|^4.0|^5.0|^6.0"
    },
    "require-dev": {
        "symfony/filesystem": "^2.7|^3.0|^4.0|^5.0|^6.0",
        "phpunit/phpunit": "^5.7"
    },
    "autoload": {
        "psr-4": {
            "Attla\\ResourceWatcher\\": "src/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true
    }
}
